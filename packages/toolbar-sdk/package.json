{
  "name": "@betterstacks/toolbar-sdk",
  "version": "0.2.0",
  "description": "A customizable floating toolbar SDK for React applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "homepage": "https://github.com/sourabhrathourr/toolbar-sdk#readme",
  "bugs": {
    "url": "https://github.com/sourabhrathourr/toolbar-sdk/issues"
  },
  "sideEffects": false,
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sourabhrathourr/toolbar-sdk.git"
  },
  "keywords": [
    "toolbar",
    "react",
    "ui",
    "floating",
    "draggable"
  ],
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react --external react-dom --tsconfig ./tsconfig.json",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react --external react-dom",
    "lint": "eslint src/",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "prepublishOnly": "npm run build",
    "version": "npm run build && git add -f dist",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "react": "^19.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.1.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.350.0",
    "tailwind-merge": "^3.0.2"
  }
}
